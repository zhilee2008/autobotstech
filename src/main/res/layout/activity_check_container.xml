<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/checkradiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_check"
            style="@style/style_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/title1_check" />

        <RadioButton
            android:id="@+id/rb_check1"
            style="@style/style_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_check_1" />

        <RadioButton
            android:id="@+id/rb_check2"
            style="@style/style_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_check_2" />


    </RadioGroup>

    <com.autobotstech.cyzk.activity.widget.NoSlidingViewPaper
        android:id="@+id/checkviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/checkradiogroup"></com.autobotstech.cyzk.activity.widget.NoSlidingViewPaper>

</LinearLayout>