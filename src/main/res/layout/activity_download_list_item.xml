<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycleritemtag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recycleritemimageview"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/recycleritemtextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.89"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/downloadtitle"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/previewbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_blue_24dp" />

        <LinearLayout
            android:layout_width="10dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"></LinearLayout>

        <!--<ImageView-->
        <!--android:id="@+id/downloadbutton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_file_download_black_24dp" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <!--<TextView-->
        <!--android:id="@+id/recycleritemkeyword"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="@color/blue"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="2"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="40dp" />-->
        <TextView
            android:id="@+id/recycleritemcreatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:padding="5dp" />

        <TextView
            android:id="@+id/recycleritemkeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/keyword_border"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textColor="#A3C4F9" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffeaeaea" />
</LinearLayout>
