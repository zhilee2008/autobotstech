<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/flowradiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_flowimage"
            android:checked="true"
            style="@style/style_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flowchart" />

        <RadioButton
            android:id="@+id/rb_flowlist"
            style="@style/style_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flowlist" />

    </RadioGroup>

    <com.autobotstech.cyzk.activity.widget.NoSlidingViewPaper
        android:id="@+id/flowviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/flowradiogroup"></com.autobotstech.cyzk.activity.widget.NoSlidingViewPaper>
</LinearLayout>
