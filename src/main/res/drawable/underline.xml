<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#00FF00" />
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item
        android:top="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>